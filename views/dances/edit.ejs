<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <%
      var videoLink = dance.video;
      var viewVideo = videoLink.substr(32);
    %>
  </head>

  <body>
    <% include ../partials/nav %>


    <div class='container'>
      <h1>Edit Posting</h1>

      <div class="row">
        <div class="col-md-6">
          <h5>Current picture:</h5>
          <img class="viewImg" src="<%=dance.img%>">
        </div>

        <div class="col-md-6">
          <form class="form-horizontal" action="/dances/<%=dance.id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="title">Title: </label>
              <input type="text" name="title" id="title" class="form-control" value="<%=dance.title%>">
            </div>
            <div class="form-group">
              <label for="description">Description: </label>
              <!-- <input type="text" name="description" id="description"> -->
              <textarea name="description" id="description" class="form-control" rows="2"><%=dance.description%></textarea>
            </div>
            <div class="form-group">
              <label for="img">Picture url: </label>
              <input type="text" name="img" id="img" class="form-control" value="<%=dance.img%>">
            </div>

            <div class="form-group">
              <label for="video">Video url: </label>
              <input type="text" name="video" id="video" class="form-control" value="<%=dance.video%>">
            </div>
              <input type="submit" name="action" value="Update">
              <a href="/dances/<%=dance.id%>">Cancel</a>
          </form>
        </div>
      </div><!-- row -->
    </div> <!-- container-fluid -->
  </body>
</html>
